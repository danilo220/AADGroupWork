            <ImageView
                android:id="@+id/twelvethImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingRight="10dip"
                android:src="@drawable/road_recognition_twelve" />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>

